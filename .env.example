# Example environment file for local development
# Copy to `.env` and fill values before running locally

# Server
PORT=3000

# Medusa backend
# Full base URL for Medusa (no trailing slash)
MEDUSA_BASE_URL=https://your-medusa-backend.example
# medusa auth type: basic (secret API key) or bearer (JWT)
MEDUSA_AUTH_TYPE=basic
# Secret API key from Medusa admin or JWT token (preferred: set in Vercel secrets)
MEDUSA_SECRET_API_KEY=your_medusa_secret_api_key_here

# Security for this MCP server itself (recommended for public deployments)
MCP_API_KEY=long_random_mcp_api_key_here

# CORS - comma separated origins (use * for all in dev)
CORS_ORIGINS=http://localhost:5173,https://your-dashboard.example

# Express JSON body limit (Vercel has ~4.5MB hard cap)
JSON_BODY_LIMIT=10mb

# Confirm gate: require confirm token for write ops
REQUIRE_CONFIRM=true
CONFIRM_SECRET=long_random_confirm_secret_here
CONFIRM_TTL_SECONDS=300
# === MCP Server ===
PORT=3000
# Optional: protect your /mcp endpoint itself.
# If set, every request must include either:
# - Authorization: Bearer <MCP_API_KEY>
# - x-mcp-api-key: <MCP_API_KEY>
MCP_API_KEY=
# Comma-separated list, or * for permissive (recommended to set exact domains)
CORS_ORIGINS=*

# Express JSON body limit (local/self-hosted). Note: Vercel has a hard cap (~4.5MB).
JSON_BODY_LIMIT=10mb

# Enforce two-step confirm for write operations (recommended: true)
REQUIRE_CONFIRM=true
# Used to sign confirm tokens (set a long random secret in production)
CONFIRM_SECRET=change_me_to_a_long_random_string
# Confirm token TTL in seconds
CONFIRM_TTL_SECONDS=300

# === Medusa Admin API ===
# e.g. https://your-medusa-backend.koyeb.app
MEDUSA_BASE_URL=https://YOUR_MEDUSA_BACKEND
# Authentication mode: basic | bearer
# - basic: use Medusa Secret API Key (from Medusa Dashboard)
# - bearer: use a JWT
MEDUSA_AUTH_TYPE=basic

# Preferred name (Secret API Key from Medusa Dashboard)
MEDUSA_SECRET_API_KEY=YOUR_SECRET_API_KEY

# Backward compatible (legacy) name (optional)
MEDUSA_AUTH_TOKEN=

# Optional: default currency/region helpers (not required)
DEFAULT_CURRENCY=bhd
