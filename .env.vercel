# Example env file for Vercel (use this as a reference when adding Environment Variables in Vercel dashboard)
# Do NOT commit secrets for real deployments.

# Vercel will ignore `PORT` (use platform default), but keep for local parity
PORT=3000

MEDUSA_BASE_URL=https://your-medusa-backend.example
MEDUSA_AUTH_TYPE=basic
MEDUSA_SECRET_API_KEY=__REPLACE_WITH_SECRET__

MCP_API_KEY=__REPLACE_WITH_MCP_API_KEY__

# Limit JSON body to avoid Vercel hard caps
JSON_BODY_LIMIT=4mb

REQUIRE_CONFIRM=true
CONFIRM_SECRET=__REPLACE_WITH_CONFIRM_SECRET__
CONFIRM_TTL_SECONDS=300
