# === MCP Server ===
PORT=3000
CORS_ORIGINS=*

# Enforce two-step confirm for write operations (recommended: true)
REQUIRE_CONFIRM=true
# Used to sign confirm tokens (set a long random secret in production)
CONFIRM_SECRET=vercel_generated_secret_CHANGE_ME
# Confirm token TTL in seconds
CONFIRM_TTL_SECONDS=300

# === Medusa Admin API ===
# Set these in your Vercel Project Settings for security
MEDUSA_BASE_URL=https://your-medusa-backend.koyeb.app
MEDUSA_AUTH_MODE=basic
MEDUSA_AUTH_TOKEN=your_medusa_api_key
DEFAULT_CURRENCY=bhd
